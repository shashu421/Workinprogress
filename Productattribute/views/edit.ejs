<%- include("partials/header") %>

<div class="container">
    <header class="jumbotron">
        <p>Edit</p>
    </header>
    <form action="/productattribute/<%= product._id %>?_method=PUT" method="POST">
            <div class="form-group">
            <label for="exampleInputEmail1">Name</label>
            <input type="text" class="form-control" name = "prod[Name]" id="exampleInputEmail1" value="<%= product.Name %>">
            </div>
              <div class="form-group">
                <label for="exampleFormControlSelect1">Variation</label>
                <select class="form-control" name = "prod[Variation]" id="exampleFormControlSelect1" value="<%= product.Variation %>">
                  <option>VS</option>
                  <option>S</option>
                  <option>M</option>
                  <option>L</option>
                  <option>XL</option>
                  <option>XXL</option>
                </select>
              </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>

<%- include("partials/footer") %>